  {R : Subset S.carrier} (oc : ops_closed R) : 
  (std_str_of_Œ©_str sign).H (str_subobject oc).str S.str (pred_Set_map R) :=
begin
  apply prop_to_prop_resize, apply is_Œ©_structure_hom.mk,
  { intros o x, refl },
  { intros r x rx, exact rx }
end    

