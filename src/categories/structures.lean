  { exact str_subobject oc_R },
  { change ‚Ü•(Œ©_structure_laws_pred P (str_subobject oc_R)),
    apply prop_to_prop_resize, apply prod.mk, 
    { intros r args, apply prod.mk, 
      { intro so_rel, apply le_laws r args,
