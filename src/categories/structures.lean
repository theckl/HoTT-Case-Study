@[hott]
def law_str_subset {sign : fo_signature} {P : signature_laws sign} {S : Œ©_str_subtype P}
  (R : Subset S.1.1) (oc_R : ops_closed R) 
  (le_laws : @left_exact_sign_laws sign P S.1 R oc_R) : 
  Œ©_str_subtype P :=
begin
