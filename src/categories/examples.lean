@[hott]
def hom_image_univ {C : Type u} [category.{v} C] {c d : C} (f : c ‚ü∂ d) [has_image f] :
  Œ† (a : subobject d) (f' : c ‚ü∂ a.obj), f' ‚â´ a.hom = f -> (hom.image f ‚ü∂ a) :=
assume a f' p, (untrunc_of_is_trunc (has_image.exists_im f)).univ a ‚ü®f', p‚ü© 

@[hott, instance]
def subobj_has_im {C : Type u} [category.{v} C] {c : C} (b : subobject c) :
  has_image b.hom :=
have im_b : cat_image b.hom, from 
  cat_image.mk b (sigma.mk (ùüô b.obj) (precategory.id_comp b.hom)) 
               (Œª a m, hom_of_monos.mk _ _ m.1 m.2),  
has_image.mk (tr im_b)

