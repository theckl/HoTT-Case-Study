have q : apd01111 ring_hom.mk (refl ‚áëf) (rh_fun_one_eq (refl ‚áëf)) 
         (rh_fun_mul_eq (refl ‚áëf)) (rh_fun_zero_eq (refl ‚áëf))
         (rh_fun_add_eq (refl ‚áëf)) = idp, 
